{% extends 'base-menu.html.twig' %}
{% block body %}
        <div class="ibox-content">
            <div class="loginColumns animated fadeInDown">
                <div class="row">

                    <div class="col-md-6">

                        <h2 class="font-bold">Créer un nouvel utilisateur</h2>
                    </div>
                    <div class="col-md-6">
                        <div class="ibox-content">
                            {% if error is defined and error is not empty %}
                                <div class="alert alert-danger">
                                    <strong>Attention</strong> {{ error }}
                                </div>
                            {% endif %}
                            {{ form_start(formRegistration, {'method': 'post'}) }}
                            <div class="form-group">{{ form_row(formRegistration.email) }}</div>
                            <div class="form-group">{{ form_row(formRegistration.firstname) }}</div>
                            <div class="form-group">{{ form_row(formRegistration.lastname) }}</div>
                            <div class="form-group">{{ form_row(formRegistration.phone_number) }}</div>
                            <div class="form-group">{{ form_row(formRegistration.birth_date) }}</div>
                            <div class="form-group">{{ form_row(formRegistration.city) }}</div>
                            <div class="form-group">{{ form_row(formRegistration.group) }}</div>
                            <input type="submit" class="btn btn-primary block full-width m-b" value="{{ "Créer un utilisateur"|trans }}">
                            {{ form_end(formRegistration) }}
                            <p class="m-t">
                                <small>Nouestil © 2018</small>
                            </p>
                        </div>
                    </div>
                </div>
                <hr>
            </div>
        </div>
{% endblock body %}

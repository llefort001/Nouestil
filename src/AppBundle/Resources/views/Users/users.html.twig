{% extends 'base-menu.html.twig' %}
{% block pageStylesheets %}
    <link href="{{ asset('css/plugins/dataTables/datatables.min.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>{{ "Utilisateurs"|trans }}</h5>
                        <div class="ibox-tools">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('createUser') }}" class="btn btn-primary btn-xs">{{ "Créer un utilisateur"|trans }}</a>
                            {% endif %}
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                <tr>
                                    <th class="exportable">#</th>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <th class="exportable">{{ "Nom d'utilisateur"|trans }}</th>
                                    {% endif %}
                                    <th class="exportable">{{ "Nom"|trans }}</th>
                                    <th class="exportable">{{ "Prénom"|trans }}</th>
                                    <th class="exportable">{{ "Date de naissance"|trans }}</th>
                                    <th class="exportable">{{ "Num tel"|trans }}</th>
                                    <th class="exportable">{{ "Email"|trans }}</th>
                                    <th class="exportable">{{ "Contacts"|trans }}</th>
                                    <th class="exportable">{{ "Groupe"|trans }}</th>
                                    <th class="exportable">{{ "Note publique"|trans }}</th>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <th class="exportable">{{ "Note privée"|trans }}</th>
                                        <th>{{ "Actions"|trans }}</th>
                                    {% endif %}
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td class="exportable">{{ user.id }}</td>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <td class="exportable">{{ user.username }}</td>
                                        {% endif %}
                                        <td class="exportable">{{ user.lastname }}</td>
                                        <td class="exportable">{{ user.firstname }}</td>
                                        <td class="exportable">{{ user.birthdate|date('d-m-Y') }}</td>
                                        <td class="exportable">{{ user.phoneNumber }}</td>
                                        <td class="exportable">{{ user.email }}</td>
                                        <td class="exportable">{% for key, contact in user.contacts %}
                                                <a href="#"><span class="label label-default" data-toggle="modal" data-target="#contactModal{{ contact.id }}"> {{ contact.firstname }} {{ contact.lastname }}</span></a>
                                            {% endfor %}
                                        </td>
                                        <td class="exportable">{% if user.group.id is defined %}{{ user.group }}{% endif %}</td>
                                        <td class="exportable">{{ user.publicNote }}</td>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <td class="exportable">{{ user.privateNote }}</td>

                                            <td>
                                                <a href="#"><span class="label label-default" data-toggle="modal" data-target="#userModal_{{ user.id }}">{{ "Modifier"|trans }}</span></a>
                                                <a class="label label-warning"  href="{{ path('fos_user_profile_show', {'_want_to_be': user.username}) }}">{{ "Vue utilisateur"|trans }}</a>
                                            </td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>#</th>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <th>{{ "Nom d'utilisateur"|trans }}</th>
                                    {% endif %}
                                    <th>{{ "Nom"|trans }}</th>
                                    <th>{{ "Prénom"|trans }}</th>
                                    <th>{{ "Date de naissance"|trans }}</th>
                                    <th>{{ "Num tel"|trans }}</th>
                                    <th>{{ "Email"|trans }}</th>
                                    <th>{{ "Contacts"|trans }}</th>
                                    <th>{{ "Groupe"|trans }}</th>
                                    <th>{{ "Note publique"|trans }}</th>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <th>{{ "Note privée"|trans }}</th>
                                        <th>{{ "Actions"|trans }}</th>
                                    {% endif %}
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                        {% for user in users %}
                            <div class="modal fade" id="userModal_{{ user.id }}" tabindex="-1"
                                 role="dialog"
                                 aria-labelledby="myModalLabel">
                                <div class="modal-dialog" role="document">
                                    <form method="post" action="{{ path('updateUser') }}"
                                          name="update-user"
                                          class="form-horizontal">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                    <span aria-hidden="true">&times;</span></button>
                                                <h4 class="modal-title" id="myModalLabel">
                                                    {{ user.username }} </h4>
                                            </div>
                                            <div class="modal-body">

                                                <div class="Group">
                                                    <div>
                                                        <p>{{ "Nom : "|trans }}<input type="text" name="lastname" value="{{ user.lastname }}">  </p>
                                                    </div>
                                                    <div>
                                                        <p>{{ "Prenom : "|trans }}<input type="text" name="firstname" value="{{ user.firstname }}"></p>
                                                    </div>
                                                    <div>
                                                        <p>{{ "Date de naissance : "|trans }}<input type="date" name="birthdate" min="1900-01-01" value="{{ user.birthdate|date('Y-m-d') }}"></p>
                                                    </div>
                                                    <div>
                                                        <p>{{ "numero de telephone : "|trans }}<input type="number" name="phoneNumber" value="{{ user.phoneNumber }}"></p>
                                                    </div>
                                                    <div>
                                                        <p>{{ "email : "|trans }}<input type="email" name="email" value="{{ user.email }}"></p>
                                                    </div>
                                                </div>
                                                <br>

                                                <div class="Group">
                                                    <h5>{{ "Modifier le groupe"|trans }}</h5>
                                                    <p>{{ "Groupe"|trans }}:
                                                        <select name="group" value="{{ user.group }}">
                                                            <option>
                                                                -- {{ "Sélectionner une option"|trans }} --
                                                            </option>
                                                            {% for key, group in groups %}
                                                                <option value="{{ group }}" {% if user.group.id is defined and user.group.id==group.id %} selected="selected" {% endif %}  >{{ group }}</option>
                                                            {% endfor %}
                                                        </select>
                                                    </p>
                                                </div>

                                                <br>
                                                <div class="Group">
                                                    <h5>{{ "Commentaires"|trans }}</h5>
                                                    <div>
                                                        <p>{{ "Note publique : "|trans }}<input type="text" name="publicNote" value="{{ user.publicNote }}"></p>
                                                    </div>
                                                    <div>
                                                        <p>{{ "Note privée : "|trans }}<input type="text" name="privateNote" value="{{ user.privateNote }}"></p>
                                                    </div>
                                                </div>
                                                <br>
                                                <div class="Group">
                                                    <h5>{{ "Paiements"|trans }}</h5>
                                                    <table class="table">
                                                        <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>{{ "Montant"|trans }}</th>
                                                            <th>{{ "Méthode"|trans }}</th>
                                                            <th>{{ "Date"|trans }}</th>
                                                        </tr>
                                                        </thead>
                                                        <tbody>
                                                        {% for payment in user.payments %}
                                                            <tr>
                                                                <td>{{ payment.id }}</td>
                                                                <td>{{ payment.amount }} €</td>
                                                                <td>{{ payment.method }}</td>
                                                                <td>{{ payment.datetime|date('d-m-Y') }}</td>
                                                            </tr>
                                                        {% endfor %}
                                                        </tbody>
                                                    </table>
                                                </div>

                                                <div class="modal-footer">
                                                    {% if currentUser != user %}
                                                        <a class="btn btn-w-m btn-danger pull-left"
                                                           href="{{ path('deleteUser',{'userId': user.id}) }}"
                                                           onclick="return confirm('Supprimer {{ user.firstname }} {{ user.lastname }} ?')">{{ "Supprimer l'utilisateur"|trans }}</a>
                                                    {% endif %}
                                                    <input type="hidden" name="id"
                                                           value="{{ user.id }}">
                                                    <button type="submit"
                                                            class="btn btn-primary">{{ "Sauvegarder"|trans }}
                                                    </button>
                                                </div>

                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            {% for key, contact in user.contacts %}
                                <div class="modal fade" id="contactModal{{ contact.id }}" tabindex="-1"
                                     role="dialog"
                                     aria-labelledby="myModalLabel">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                    <span aria-hidden="true">&times;</span></button>
                                                <h4 class="modal-title" id="myModalLabel">
                                                    {{ contact.firstname }} {{ contact.lastname }}</h4>
                                            </div>
                                            <div class="modal-body">
                                                {{ "Num tel"|trans }} : {{ contact.phoneNumber }}
                                                <div class="col-12">
                                                    <a class="btn btn-w-m btn-danger"
                                                       href="{{ path('unlinkContact',{'userId' : user.id,'contactId': contact.id}) }}"
                                                       onclick="return confirm('Délier ce contact de l\'utilisateur ?')">{{ "Délier ce contact de l'utilisateur"|trans }}</a>
                                                    <a class="btn btn-w-m btn-danger"
                                                       href="{{ path('deleteContact',{'contactId': contact.id}) }}"
                                                       onclick="return confirm('Confirmer la suppression du contact ?')">{{ "Supprimer"|trans }}</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block pageScripts %}
    <!-- Page-Level Scripts -->
    <script src="{{ asset('js/plugins/dataTables/datatables.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            var locale = "{{ asset('js/plugins/dataTables/') }}" + "{{ app.request.get('_locale') }}" + ".json";
            var buttonCommon = {
                exportOptions: {
                    columns: '.exportable'
                }
            };
            $('.dataTables-example').DataTable({
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    $.extend(true, {}, buttonCommon, {
                        extend: 'copyHtml5'
                    }),
                    $.extend(true, {}, buttonCommon, {
                        extend: 'csvHtml5',
                        title: 'NOUESTIL Users Export'
                    }),
                    $.extend(true, {}, buttonCommon, {
                        extend: 'excelHtml5',
                        title: 'NOUESTIL Users Export'
                    }),
                    $.extend(true, {}, buttonCommon, {
                        extend: 'print'
                    }),
                    $.extend(true, {}, buttonCommon, {
                        extend: 'pdfHtml5',
                        title: 'NOUESTIL Users Export'
                    })
                ],
                language: {
                    url: locale
                }

            });

        });

    </script>
{% endblock %}
{% extends 'base-menu.html.twig' %}
{% block pageStylesheets %}
    <link href="{{ asset('css/plugins/dataTables/datatables.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/plugins/select2/select2.min.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="ibox-title">
        <h5>{{ course.name }} - {{  course.session }}</h5>
        <div class="ibox-content">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>{{ "Nom d\'utilisateur"|trans }}</th>
                    <th>{{ "Nom"|trans }}</th>
                    <th>{{ "Prénom"|trans }}</th>
                    <th>{{ "Action"|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for user in course.users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.firstname }}</td>
                        <td><a href="{{ path('deleteUserCourse',{'userId': user.id, 'courseId': course.Id}) }}"
                               onclick="return confirm('Confirmer la suppression ?')">
                                <span class="label label-danger">{{ "Supprimer"|trans }}</span></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <hr />
        <form method="POST" action="{{ path('usersCourse',{'courseId' : course.id}) }}" name="usersCourse" class="form-horizontal">
            <div class="form-group">
                <label class="font-noraml">Ajouter des utilisateurs</label>
                <div class="input-group">
                    <select data-placeholder="Choisir des élèves..." class="user" multiple="" name="users[]" style="width: 350px; display: none;" tabindex="-1">
                        <option disabled> -- {{ "Selectionner des utilisateurs"|trans }} --</option>
                        {% for user in results %}
                        <option value="{{ user.id }}">{{ user.firstname }} {{ user.lastname }}</option>
                        {% endfor %}
                    </select>
                </div>
                <input type="hidden" name="id" value="{{ course.id }}">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
{% endblock %}
{% block pageScripts %}
    <script src="{{ asset('js/plugins/select2/select2.full.min.js') }}"></script>
    <script>
    $(document).ready(function(){
        $('.user').select2();
    });
    </script>
{% endblock %}

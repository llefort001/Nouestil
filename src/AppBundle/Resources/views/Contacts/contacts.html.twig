{% extends 'base-menu.html.twig' %}
{% block pageStylesheets %}
    <link href="{{ asset('css/plugins/dataTables/datatables.min.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>{{ "Contacts"|trans }}</h5>
                        <div class="ibox-tools">
                            <a href="{{ path('createContact') }}"
                               class="btn btn-primary btn-xs">{{ "Créer un contact"|trans }}</a>
                        </div>
                        <div class="ibox-content">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                    <tr>
                                        <th class="exportable">#</th>
                                        <th class="exportable">{{ "Nom"|trans }}</th>
                                        <th class="exportable">{{ "Prénom"|trans }}</th>
                                        <th class="exportable">{{ "Email"|trans }}</th>
                                        <th class="exportable">{{ "Num tel"|trans }}</th>
                                        <th class="exportable">{{ "Utilisateurs"|trans }}</th>
                                        <th>{{ "Actions"|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for contact in contacts %}
                                        <tr>
                                            <td class="exportable">{{ contact.id }}</td>
                                            <td class="exportable">{{ contact.lastname }}</td>
                                            <td class="exportable">{{ contact.firstname }}</td>
                                            <td class="exportable">{{ contact.email }}</td>
                                            <td class="exportable">{{ contact.phoneNumber }}</td>
                                            <td class="exportable">
                                                {% for key, user in contact.users %}
                                                    <a href="#"><span class="label label-default" data-toggle="modal"
                                                                      data-target="#userModal_{{ user.id }}">{{ user.firstname }} {{ user.lastname }}</span></a>
                                                    {#{{ user }}#}
                                                {% endfor %}

                                            </td>
                                            <td>
                                                <a href="#"><span class="label label-default" data-toggle="modal" data-target="#contactModal_{{ contact.id }}">Modifier</span></a>
                                                {#<a class="label label-warning"  href="{{ path('base_homepage', {'_want_to_be': contact.username}) }}" >Impersonate</a>#}
                                                <a href="{{ path('deleteContact',{'contactId': contact.id}) }}" onclick="return confirm('Confirmer la suppression ?')"><span
                                                            class="label label-danger">Supprimer</span></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <th class="exportable">#</th>
                                        <th class="exportable">{{ "Nom"|trans }}</th>
                                        <th class="exportable">{{ "Prénom"|trans }}</th>
                                        <th class="exportable">{{ "Email"|trans }}</th>
                                        <th class="exportable">{{ "Num tel"|trans }}</th>
                                        <th>{{ "Utilisateurs"|trans }}</th>
                                        <th>{{ "Actions"|trans }}</th>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                            {% for contact in contacts %}
                                <div class="modal fade" id="contactModal_{{ contact.id }}" tabindex="-1"
                                     role="dialog"
                                     aria-labelledby="myModalLabel">
                                    <div class="modal-dialog" role="document">
                                        <form method="post" action="{{ path('updateContact') }}" name="update-contact" class="form-horizontal">
                                            <div class="modal-content">
                                                <div class="modal-header">

                                                    <button type="button" class="close"
                                                            data-dismiss="modal"
                                                            aria-label="Close">
                                                        <span aria-hidden="true">&times;</span></button>
                                                    <h4 class="modal-title" id="myModalLabel">
                                                        {{ contact.firstname }} {{ contact.lastname }}</h4>
                                                </div>
                                                <div class="modal-body">

                                                    <div class="Group">
                                                        <h5>{{ "Modifier le contact"|trans }}</h5>
                                                    </div>
                                                    <hr/>
                                                    <div class="Group">
                                                        <div>
                                                            <p>{{ "Nom"|trans }} : <input type="text" name="lastname" value="{{ contact.lastname }}">  </p>
                                                        </div>
                                                        <div>
                                                            <p>{{ "Prenom"|trans }} : <input type="text" name="firstname" value="{{ contact.firstname }}"></p>
                                                        </div>
                                                        <div>
                                                            <p>{{ "email"|trans }} : <input type="email" name="email" value="{{ contact.email }}"></p>
                                                        </div>
                                                        <div>
                                                            <p>{{ "numero de telephone"|trans }} : <input type="number" name="phoneNumber" value="{{ contact.phoneNumber }}"></p>
                                                        </div>
                                                    </div>


                                                </div>
                                                <div class="modal-footer">
                                                    <input type="hidden" name="id"
                                                           value="{{ contact.id }}">
                                                    <button type="submit"
                                                            class="btn btn-primary">{{ "Sauvegarder"|trans }}
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                {% for key, user in contact.users %}
                                    <div class="modal fade" id="userModal_{{ user.id }}" tabindex="-1"
                                         role="dialog"
                                         aria-labelledby="myModalLabel">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close"
                                                            data-dismiss="modal"
                                                            aria-label="Close">
                                                        <span aria-hidden="true">&times;</span></button>
                                                    <h4 class="modal-title" id="myModalLabel">
                                                        {{ user.firstname }} {{ user.lastname }}</h4>
                                                </div>
                                                <div class="modal-body">
                                                    {{ "Num tel"|trans }} : {{ user.phoneNumber }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block pageScripts %}
    <!-- Page-Level Scripts -->
    <script src="{{ asset('js/plugins/dataTables/datatables.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            var locale = "{{ asset('js/plugins/dataTables/') }}" + "{{ app.request.get('_locale') }}" + ".json";
            var buttonCommon = {
                exportOptions: {
                    columns: '.exportable'
                }
            };
            $('.dataTables-example').DataTable({
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    $.extend(true, {}, buttonCommon, {
                        extend: 'copyHtml5'
                    }),
                    $.extend(true, {}, buttonCommon, {
                        extend: 'csvHtml5',
                        title: 'NOUESTIL Contacts Export'
                    }),
                    $.extend(true, {}, buttonCommon, {
                        extend: 'excelHtml5',
                        title: 'NOUESTIL Contacts Export'
                    }),
                    $.extend(true, {}, buttonCommon, {
                        extend: 'print'
                    }),
                    $.extend(true, {}, buttonCommon, {
                        extend: 'pdfHtml5',
                        title: 'NOUESTIL Contacts Export'
                    })
                ],
                language: {
                    url: locale
                }

            });

        });

    </script>
{% endblock %}
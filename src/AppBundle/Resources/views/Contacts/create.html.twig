{% extends 'base.html.twig' %}
{% block body %}
<div class="ibox-content">
            <div class="loginColumns animated fadeInDown">
                <div class="row">

                    <div class="col-md-6">

                        <h2 class="font-bold">Créer un nouveau contact</h2>
                        <p>
                            texte exemple
                        </p>
                    </div>
                    <div class="col-md-6">
                        <div class="ibox-content">
                            {% if error is defined and error is not empty %}
                                <div class="alert alert-danger">
                                    <strong>Attention</strong> {{ error }}
                                </div>
                            {% endif %}
                            {{ form_start(formContact, {'method': 'post'}) }}
                            <div class="form-group">{{ form_row(formContact.user) }}</div>
                            <div class="form-group">{{ form_row(formContact.email) }}</div>
                            <div class="form-group">{{ form_row(formContact.firstname) }}</div>
                            <div class="form-group">{{ form_row(formContact.lastname) }}</div>
                            <div class="form-group">{{ form_row(formContact.phone_number) }}</div>
                            <div class="form-group">{{ form_row(formContact.kinship) }}</div>
                            <input type="submit" class="btn btn-primary block full-width m-b" value="Créer">
                            {{ form_end(formContact) }}
                            <p class="m-t">
                                <small>Nouestil © 2018</small>
                            </p>
                        </div>
                    </div>
                </div>
                <hr>
            </div>
        </div>
{% endblock body %}

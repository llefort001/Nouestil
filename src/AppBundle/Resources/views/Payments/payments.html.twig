{% extends 'base.html.twig' %}

{% block body %}
    {% for type, flash_messages in app.session.flashBag.all %}
        {% for flash_message in flash_messages %}
            <br/>
            <pre class="alert alert-danger">
                {{- flash_message -}}
            </pre>
        {% endfor %}
    {% endfor %}
    <div class="ibox-title">
    <h5>Paiements</h5>
    <div class="ibox-content">

        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom d'utilisateur</th>
                <th>Montant</th>
                <th>MÃ©thode</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for payment in payments %}
                <tr>
                    <td>{{ payment.id }}</td>
                    <td>{{ payment.user }}</td>
                    <td>{{ payment.amount }}</td>
                    <td>{{ payment.method }}</td>
                    <td>{{ payment.datetime|date('Y-m-d') }}</td>
                    <td>
                        <span class="label label-default" data-toggle="modal" data-target="#paymentModal_{{ payment.id }}">+</span>
                        {#<a class="label label-warning"  href="{{ path('base_homepage', {'_want_to_be': user.username}) }}" >Impersonate</a>#}
                        {#{% if currentUser != user %}#}
                        <a href="{{ path('deletePayment',{'paymentId': payment.id}) }}"
                        onclick="return confirm('Confirmer la suppression ?')"><span class="label label-danger">Supprimer</span></a>
                        {#{% endif %}#}
                        <div class="modal fade" id="paymentModal_{{ payment.id }}" tabindex="-1" role="dialog"
                             aria-labelledby="myModalLabel">
                            <div class="modal-dialog" role="document">#}
                                <form method="post" action="{{ path('updatePayment') }}" name="update-payment" class="form-horizontal">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="myModalLabel">Modifier Payment #{{ payment.id }} </h4>
                                        </div>
                                        <div class="modal-body">
                                            <div>
                                                <p>Montant: <input type="number" name="amount" value="{{ payment.amount }}"></p>
                                            </div>
                                            <br/>
                                            <div>
                                                <p>Date: <input type="date" name="datetime" value="{{ payment.datetime|date('Y-m-d') }}"></p>
                                            </div>
                                            <br/>
                                            <div>
                                                <p>Methode:
                                                    <select name="method" name="method" value="{{ payment.method }}">
                                                        <option value="cb">CB</option>
                                                        <option value="especes">Especes</option>
                                                        <option value="paypal">PayPal</option>
                                                        <option value="autre">Autre</option>
                                                    </select>
                                                </p>
                                            </div>
                                            <br/>
                                            <div class="modal-footer">
                                                <input type="hidden" name="id" value="{{ payment.id }}">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary">Save changes</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        <a class="btn btn-w-m btn-primary" href="{{ path('createPayment') }}" >Ajouter Paiment</a>

        {% if errorMessage is defined %}
            <br/>
            <div class="alert alert-danger">
                {{ error }}
            </div>

        {% endif %}

    </div>
{% endblock %}
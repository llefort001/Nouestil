{% extends 'base-menu.html.twig' %}
{% block body %}
    <div class="ibox-content">
        <div class="loginColumns animated fadeInDown">
            <div class="row">

                <div class="col-md-6">

                    <h2 class="font-bold">{{ "Créer un paiement"|trans }}</h2>
                    <p>
                        {{ "Descriptif créer un paiement"|trans }}
                    </p>
                </div>
                <div class="col-md-6">
                    <div class="ibox-content">
                        {% if error is defined and error is not empty %}
                            <div class="alert alert-danger">
                                <strong>Attention</strong> {{ error }}
                            </div>
                        {% endif %}
                        {{ form_start(formCreatePayment, {'method': 'post'}) }}
                        <div class="form-group">{{ form_row(formCreatePayment.title) }}</div>
                        <div class="form-group">{{ form_row(formCreatePayment.amount) }}</div>
                        <div class="form-group">{{ form_row(formCreatePayment.datetime, { 'attr': {'min': '2017-01-01'} }) }}</div>
                        <div class="form-group">{{ form_row(formCreatePayment.user) }}</div>
                        <div class="form-group">{{ form_row(formCreatePayment.note) }}</div>
                        <div class="form-group">{{ form_row(formCreatePayment.method) }}</div>
                        <div class="form-group">{{ form_row(formCreatePayment.category) }}</div>
                        <input type="submit" class="btn btn-primary block full-width m-b" value="{{ "Créer un paiement"|trans }}">
                        {{ form_end(formCreatePayment) }}
                        <p class="m-t">
                            <small>Nouestil © 2018</small>
                        </p>
                    </div>
                </div>
            </div>
            <hr>
        </div>
    </div>
{% endblock body %}

{% extends 'base-menu.html.twig' %}
{% block pageStylesheets %}
    <link href="{{ asset('css/plugins/dataTables/datatables.min.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>{{ "Checklists"|trans }}</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                <tr>
                                    <th class="exportable">#</th>
                                    <th class="exportable">{{ "Nom du cours"|trans }}</th>
                                    <th class="exportable">{{ "Session"|trans }}</th>
                                    <th class="exportable">{{ "Date"|trans }}</th>
                                    <th>{{ "Action"|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for checklist in checklists %}
                                    <tr>
                                        <td class="exportable">{{ checklist.id }}</td>
                                        <td class="exportable">{{ checklist.course.name }}</td>
                                        <td class="exportable">{{ checklist.course.session }}</td>
                                        <td class="exportable">{{ checklist.datetime|date('d-m-Y') }}</td>
                                        <td><a href="{{ path('usersChecklist', {'checklistId': checklist.id}) }}">
                                                <span class="label label-info">{{ "Afficher liste d'\appel"|trans }}</span></a></td>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>{{ "Nom du cours"|trans }}</th>
                                    <th>{{ "Session"|trans }}</th>
                                    <th>{{ "Date"|trans }}</th>
                                    <th>{{ "Actions"|trans }}</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block pageScripts %}
    <!-- Page-Level Scripts -->
    <script src="{{ asset('js/plugins/dataTables/datatables.min.js') }}"></script>
    <script src="{{ asset('js/plugins/dateTimeMoment/moment.js') }}"></script>
    <script src="{{ asset('js/plugins/dateTimeMoment/sorting_datetime-moment.js') }}"></script>
    <script>
        $.fn.dataTable.moment( 'DD-MM-YYYY' );
        $(document).ready(function () {
            var locale = "{{ asset('js/plugins/dataTables/') }}" + "{{ app.request.get('_locale') }}" + ".json";
            var buttonCommon = {
                exportOptions: {
                    columns: '.exportable'
                }
            };
            $('.dataTables-example').DataTable({
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    $.extend(true, {}, buttonCommon, {
                        extend: 'copyHtml5'
                    }),
                    $.extend(true, {}, buttonCommon, {
                        extend: 'csvHtml5',
                        title: 'NOUESTIL Checklists Export'
                    }),
                    $.extend(true, {}, buttonCommon, {
                        extend: 'excelHtml5',
                        title: 'NOUESTIL Checklists Export'
                    }),
                    $.extend(true, {}, buttonCommon, {
                        extend: 'print'
                    }),
                    $.extend(true, {}, buttonCommon, {
                        extend: 'pdfHtml5',
                        title: 'NOUESTIL Checklists Export'
                    })
                ],
                language: {
                    url: locale
                }

            });

        });

    </script>
{% endblock %}